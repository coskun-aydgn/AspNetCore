@model Course
<a asp-controller="Course" asp-action="Details" asp-route-id="@Model.Id" style="text-decoration: none; text-decoration-color: black;">
     <div class="card mb-3" id="kurs_@Model.Id">
        <div class="row">
            <div class="col-md-4">
                <img src="~/images/@Model.ImageUrl" class="img-fluid rounded-start" alt="">

            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">@Model.Title</h5>
                    <p class="card-text">@Model.Description</p>
                </div>
            </div>
        </div>
    </div>
</a>
